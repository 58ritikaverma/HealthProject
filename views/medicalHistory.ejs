<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical History</title>
    <!-- <link rel="stylesheet" href="/styles/admin.css"> -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #62b3d0;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .no-records {
            text-align: center;
            color: #999;
            font-size: 16px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Medical History Records</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th>Blood Group</th>
                    <th>Allergies</th>
                    <th>Conditions</th>
                    <th>Medications</th>
                </tr>
            </thead>
            <tbody>
                <% records.forEach(record => { %>
                    <tr>
                        <td><%= record.firstName %> <%= record.lastName %></td>
                        <td><%= record.address || 'N/A' %></td>
                        <td><%= record.phone || 'N/A' %></td>
                        <td><%= record.gender || 'N/A' %></td>
                        <td><%= record.bloodGroup || 'N/A' %></td>
                        <td><%= record.allergyDetails || 'N/A' %></td>
                        <td><%= record.medicalConditions || 'N/A' %></td>
                        <td><%= record.medications || 'N/A' %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
