        .about p {
            font-size: 1.2rem;
            letter-spacing: 0.05em; 
            text-align: justify;
        }
        
        .about h2{
            font-family: cursive;
            font-size: 2rem;
            text-align: center;
        }
        .btn{
            text-decoration: none;
            padding: 10px 20px;
            background-color: #d8915f;
            color: rgb(25, 22, 22);
            border-radius: 5px;
            margin-left: 10px;
            font-family:cursive;
            font-weight: 500;
            font-size: 18px;
        }
        .btn:hover{
            background-color: #8a5936;
        }
        .register-btn{
            text-decoration: none;
            padding: 10px 15px;
            /* background-color: #4e9dc2; */
            color: rgb(29, 28, 28);
            border-radius: 5px;
            margin-left: 5px;
            font-family:cursive;
            font-weight:500;
            font-size: 20px;
        

        }
        .diamond {
            background: #caefff;
            padding: 20px 0;
            position: relative;
            min-height: 290px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            justify-content: center;
        }
        .diamond-box-container {
            grid-row-gap: 110px;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(3, 1fr);
        }
        .elementor-element .elementor-widget-container {
            transition: background .3s, border .3s, 
            border-radius .3s, box-shadow .3s, transform var(--e-transform-transition-duration, .4s);
        }
        .elementor-widget-wrap>.elementor-element {
            width: 100%;
        }
        .elementor:not(.elementor-bc-flex-widget) .elementor-widget-wrap {
            display: flex;
        }
        .elementor-widget-wrap {
            position: relative;
            width: 100%;
            flex-wrap: wrap;
            align-content: flex-start;
        }
        .p1 {
            display: block;
            margin-block-start: 1em;
            margin-block-end: 1em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            unicode-bidi: isolate;
        }
        #about-section {  
            display:none;  
            padding: 20px;  
            border: 1px solid #ccc;  
            margin-top: 10px;  
            background-color: #e7f1f8; /* Light background for visibility */  
        }  
        #about-section.show {  
            display: block; /* Show when class is added */
        } 
        .card {  
            background-color: #e5f1f3;   
            border-radius: 10px;   
            padding: 20px;   
            margin: 10px; /* Ensure this has sufficient margin */  
            width: 300px; /* Explicit width for consistency */  
            text-align: center;   
        }
        .cards-container {  
            display: flex;  
            justify-content: space-around;  
            flex-wrap: wrap;  
            margin-top: 20px; 
            /* Space from the about section */  
            margin-bottom: 80px;
        }  
        .elementContainer.elementCounter-num{
            display: flex;
            font-size: 69px;
            font-weight: 600;
            line-height: 1;
        }
        .elementCounter-num{
            color: #1B6592;
        }
        .sp-testimonial-client-image{
            margin: 0 0 22px 0;

}


        
      
    </style>
</head>
