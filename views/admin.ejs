<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="UTF-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <title>Admin - Health Records Management</title>  
    <link rel="stylesheet" href="/public/styles.css">  
    <style>  
        body {  
            font-family: Arial, sans-serif;  
            background-color: #f6f6f6;  
            margin: 0;  
            padding: 0;  
        }  
        .header {  
            background-color: #62b3d0;  
            color: white;  
            padding: 20px;  
            text-align: center;  
        }  
        .table-container {  
            margin: 20px auto;  
            width: 80%;  
            background-color: white;  
            border-radius: 8px;  
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);  
            overflow: hidden;  
        }  
        table {  
            width: 100%;  
            border-collapse: collapse;  
        }  
        th, td {  
            border: 1px solid #ddd;  
            padding: 12px;  
            text-align: left;  
        }  
        th {  
            background-color: #62b3d0;  
            color: white;  
        }  
        .appoint-button {  
            background-color: #3ce7ab;  
            color: white;  
            border: none;  
            padding: 5px 10px;  
            cursor: pointer;  
            border-radius: 5px;  
        }  
        .appoint-button:hover {  
            background-color: #1a5036;  
        }  
        .no-users {
            text-align: center;
            color: #888;
        }
        .delete-button {
            background-color: #e74c3c;
        }
        .delete-button:hover {
            background-color: #c0392b;
        }
        .view-button {
            background-color: #3498db;
        }
        .view-button:hover {
            background-color: #217dbb;
        }
        .status-cancelled {
            color: red;
        }
        .status-active {
            color: green;
        }
    </style>  
</head>  

 <body>  
   

    <!-- ------------- -->
    <div class="header">  
        <h1>Admin Panel</h1>  
    </div>  
    <div class="table-container">  
        <h2>User Records</h2>  
        <table>  
            <thead>  
                <tr>  
                    <th>Name</th>  
                    <th>Email</th>  
                    <th>Appointment Status</th> <!-- New column for appointment status -->
                    <th>Actions</th>  
                </tr>  
            </thead>  
            <tbody>  
                <% if (users && users.length > 0) { %>  
                    <% users.forEach(user => { %>  
                        <tr>  
                            <td><%= user.name || 'N/A' %></td> <!-- Added fallback for missing name -->
                            <td><%= user.email || 'N/A' %></td> <!-- Added fallback for missing email -->
                            <td><%= user.isAdmin ? 'Admin' : 'User' %></td>
                            <td class="<%= user.appointmentStatus === 'Cancelled' ? 'status-cancelled' : 'status-active' %>">
                                <%= user.appointmentStatus || 'Active' %>
                            </td> <!-- Display status and set class for styling -->
                            <td>  
                                <form action="/admin/user/<%= user._id %>" method="POST" onsubmit="return confirm('Are you sure you want to modify this appointment?');">  
                                    <button type="submit" class="appoint-button">Modify Appointment</button>  
                                    <input type="hidden" name="_method" value="PUT">  
                                </form>  
                                <!-- Button to view health records of the user -->
                                <form action="/admin/healthrecord/<%= user._id %>" method="GET">
                                    <button type="submit" class="view-button">View Health Record</button>
                                </form>  
                                <form action="/admin/user/<%= user._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');" style="display:inline;">
                                    <button type="submit" class="delete-button">Delete</button>
                                </form>
                            </td>  
                        </tr>  
                    <% }); %>  
                <% } else { %>  
                    <tr>  
                        <td colspan="4" class="no-users" style="text-align: center; color: #888;">No users found.</td>  
                    </tr>  
                <% } %>  
            </tbody>  
        </table>  
    </div> 
</body>   
</html>