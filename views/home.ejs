            text-decoration: none;
            padding: 15px 25px;
            background-color: #4e9dc2;
            color: white;
            border-radius: 5px;
            margin-left: 60px;
            display: flex;
        }

        .reg a {
            display: block;
            color: inherit;
        }

        .reg:hover {
            background-color: #3d78ae;
            color: #f2f7f7;
            text-decoration: none;
        }

        .user-btn {
            background-color: #f5f5f5;
            border: none;
            padding: 10px 20px;
            cursor: pointer;

        }

        .user-btn:hover {
            background-color: #e0e0e0;
        }

        /* Styling for the About Section */
         .about {
            background-color: #c5ddf1;
            padding: 50px;
            margin:90px 20px;
            margin-top: 250px;
            margin-bottom: 250px;
            display: none; 
            transition: transform 0.2s ease-in;
            transform: translateY(0);
             /* Position off-screen initially */
            /* box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);*/
             border-radius: 20px; 
        } 

