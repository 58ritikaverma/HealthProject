 <!DOCTYPE html>
 <html lang="en">
 <head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Admin Dashboard</title>
     <link rel="stylesheet" href="/styles/admin.css"> <!-- Add your CSS path -->
     <link
       href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
       rel="stylesheet"
     />
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
 </head>
 <body>
     <div class="container my-5">
         <h1 class="text-center">Admin Dashboard</h1>
         <table class="table table-bordered mt-4">
             <thead>
                 <tr>
                     <th>Doctor Name</th>
                     <th>Appointment Status</th>
                     <th>Patient Details</th>
                 </tr>
             </thead>
             <tbody>
                 <% doctors.forEach((doctor) => { %>
                     <tr>
                         <td><%= doctor.username %></td> <!-- Assuming doctor has username as their name -->
                         <td>
                             <% if (doctor.appointmentStatus === 'active') { %>
                                 <span class="badge bg-success">Active</span>
                             <% } else if (doctor.appointmentStatus === 'cancel') { %>
                                 <span class="badge bg-danger">Cancel</span>
                             <% } else { %>
                                 <span class="badge bg-secondary">Unknown</span>
                             <% } %>
                         </td>
                         <td>
                             <button
                                 class="btn btn-primary btn-sm"
                                 data-bs-toggle="modal"
                                 data-bs-target="#patientDetailsModal-<%= doctor._id %>">
                                 View Details
                             </button>
 
                             <!-- Modal for Patient Details -->
                             <div class="modal fade" id="patientDetailsModal-<%= doctor._id %>" tabindex="-1" aria-labelledby="patientDetailsLabel" aria-hidden="true">
                                 <div class="modal-dialog">
                                     <div class="modal-content">
                                         <div class="modal-header">
                                             <h5 class="modal-title" id="patientDetailsLabel">Patient Details</h5>
                                             <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                         </div>
                                         <div class="modal-body">
                                             <p><strong>Name:</strong> <%= doctor.patientName %></p>
                                             <p><strong>Address:</strong> <%= doctor.patientAddress %></p>
                                             <p><strong>Phone:</strong> <%= doctor.patientPhone %></p>
                                             <p><strong>Date of Birth:</strong> <%= doctor.patientDob %></p>
                                             <p><strong>Gender:</strong> <%= doctor.patientGender %></p>
                                             <p><strong>Blood Group:</strong> <%= doctor.patientBloodGroup %></p>
                                             <p><strong>Medical Condition:</strong> <%= doctor.patientMedicalCondition %></p>
                                             <p><strong>Medication:</strong> <%= doctor.patientMedication %></p>
                                         </div>
                                         <div class="modal-footer">
                                             <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                         </div>
                                     </div>
                                 </div>
                             </div>
                         </td>
                     </tr>
                 <% }); %>
             </tbody>
         </table>
     </div>
 </body>
 </html>
 